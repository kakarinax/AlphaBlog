<div class="container">
  <% @users.each do |user| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
          <h5 class="card-header font-italic"> 
            <%= link_to user.username, user %>
          </h5>
        <div class="card-body">
          <h5 class="card-title"> 
            <%= link_to profile_image(user, size: 150) %> 
          </h5>
          <p class="card-text"> 
            <%= pluralize(user.articles.count, "article") %> 
            <%# pluralize counts and makes the word plural if there is more than one object %>
          </p>
          <%= link_to 'Show', user_path(user), class: "btn btn-outline-primary"%>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-success"%>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>