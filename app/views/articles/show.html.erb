<div id="page-content">
  <h2 class="text-center mt-4"> <%= @article.title %> </h2>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header"> 
              by <%= link_to @article.user.username if @article.user %>
              <%= link_to profile_image(@article.user, size: 50), user_path(@article.user) %> 
            </div>
          <div class="card-body">
            <p class="card-text"> <%= simple_format(@article.description) %> </p>
            <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-success"%>
            <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete it?"}, class: "btn btn-outline-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>