<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors'%>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %> 
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control" %>
          </div>
        </div>
      

        <div class="form-group text-center">
          <%= f.submit class: "btn btn-outline-light btn-lg mt-4" %>
        </div>

      <% end %>
    </div>

    <%= link_to '[ Cancel and return to articles list ]', articles_path, class: "text-center" %>
  </div>
 </div>