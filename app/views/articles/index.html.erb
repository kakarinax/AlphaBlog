<h1>Articles list</h1>

<table>
  <thead>
    <tr>
      <th style="padding:5px"> Title </th>
      <th style="padding:5px"> Description </th>
      <th colspan="3"> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td> <%= article.title %> </td>
        <td> <%= article.description %> </td>
        <td style="padding:5px"> <%= link_to 'show', article_path(article)%> </td>
        <td style="padding:5px"> <%= link_to 'edit', edit_article_path(article)%> </td>
        <td> <%= link_to 'delete', article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete it?"} %> </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Create new article', new_article_path %>
</p>
